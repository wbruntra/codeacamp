  <h1>Url Shortener!</h1>
  <form action="/urls" method="post">
    <input type="text" name="url">
    <input type="submit" value="Shorten">
  </form>

<% if !@urls.empty? %>
  <p>Here are some good URLs</p>
  <ul>
  <% @urls.each do |url| %>
	 <li>
     <a href="/<%= url.short_url %>" target="_blank"><%= url.long_url %></a>
	</li>
  <% end %>
  </ul>
<% end %>

<% if session['email'] %>
  <% if !@user_urls.empty? %>
  <p>Here's how your URLs are doing:</p>
  <ul>
    <% @user_urls.each do |url| %>
    <li>
      <p><%= url.long_url %> Clicks: <%= url.click_count %></a>
 	</li>
    <% end %>
  </ul>
  <% end %>
  <%= erb :_logged %>
<% else %>
  <%= erb :_signInOptions %>
<% end %>
